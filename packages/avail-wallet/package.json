    "@radix-ui/react-slot": "^1.2.2",
    "@tailwindcss/vite": "^4.1.7",
    "@talismn/connect-wallets": "^1.2.8",
    "avail-js-sdk": "^0.4.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.511.0",
    "path": "^0.12.7",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-icons": "^5.5.0",
    "tailwind-merge": "^3.3.0",
    "tailwindcss": "^4.1.7",
