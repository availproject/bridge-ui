      "import": "./dist/utils.js",
      "require": "./dist/utils.cjs"
    },
    "./index.css": "./dist/avail-wallet.css"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "prebuild": "rm -rf dist",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
