{
  "name": "avail-wallet",
  "version": "1.0.1",
  "type": "module",
  "files": [
    "dist"
  ],
  "main": "./dist/avail-wallet.cjs",
  "module": "./dist/avail-wallet.js",
  "sideEffects": false,
  "exports": {
    ".": {
      "import": "./dist/avail-wallet.js",
      "require": "./dist/avail-wallet.cjs"
    },
